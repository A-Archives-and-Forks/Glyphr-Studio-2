{
    "extends": "google",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules":{
        "max-len": [2, {
            "code": 120,
            "tabWidth": 4,
            "comments": 240,
            "ignoreComments": true,
            "ignoreTrailingComments": true,
            "ignoreUrls": true,
            "ignoreStrings": true,
            "ignoreTemplateLiterals": true,
            "ignoreRegExpLiterals": true
        }],
        "valid-jsdoc": [2, {
            "prefer": {
                "return": "returns"
            },
            "requireReturn": false,
            "requireReturnDescription": false,
            "requireParamDescription": false
        }],
        "linebreak-style": "off"
    }
}
