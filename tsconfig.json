{
	"compilerOptions": {
		"lib": ["es2020", "DOM"],
		"moduleResolution": "Bundler",
		"module": "esnext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true
	},
	"include": ["src/**/*.js"],
	"exclude": ["node_modules", "dist", ".vscode", ".github"]
}
